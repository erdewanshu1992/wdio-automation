{
    "name": "mobile-automation-framework",
    "version": "2.0.0",
    "description": "Enterprise-grade mobile automation framework built with WebDriverIO, designed for scalability, maintainability, and industry best practices.",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "test": "npm run test:local",
        "test:local": "cross-env ENVIRONMENT=local wdio run wdio.conf.js",
        "test:stage": "cross-env ENVIRONMENT=stage wdio run wdio.conf.js",
        "test:prod": "cross-env ENVIRONMENT=prod wdio run wdio.conf.js",
        "test:ci": "cross-env ENVIRONMENT=$ENVIRONMENT wdio run wdio.conf.js --spec=./test/specs/**/*.js",
        "test:parallel": "cross-env ENVIRONMENT=$ENVIRONMENT wdio run wdio.conf.js --cucumberOpts.tagExpression='@smoke and not @skip'",
        "test:smoke": "cross-env ENVIRONMENT=$ENVIRONMENT wdio run wdio.conf.js --grep='Smoke'",
        "test:regression": "cross-env ENVIRONMENT=$ENVIRONMENT wdio run wdio.conf.js --grep='Regression'",
        "test:android": "cross-env PLATFORM=android ENVIRONMENT=$ENVIRONMENT wdio run wdio.conf.js --grep='Android'",
        "test:ios": "cross-env PLATFORM=ios ENVIRONMENT=$ENVIRONMENT wdio run wdio.conf.js --grep='iOS'",
        "test:browser": "cross-env PLATFORM=browser ENVIRONMENT=$ENVIRONMENT BROWSER=$BROWSER wdio run wdio.conf.js --grep='Browser'",
        "test:android-native": "cross-env PLATFORM=android ENVIRONMENT=local npx wdio",
        "test:android-web": "cross-env PLATFORM=android MOBILE_WEB=true npx wdio",
        "test:ios-web": "cross-env PLATFORM=ios MOBILE_WEB=true npx wdio",
        "test:ios-native": "cross-env PLATFORM=ios npx wdio",
        "test:browser-all": "cross-env PLATFORM=browser npx wdio",
        "test:all": "npm run test:android-native; npm run test:android-web; npm run test:ios-web; npm run test:ios-native; npm run test:browser-all",
        "test:browser:chrome": "cross-env PLATFORM=browser ENVIRONMENT=$ENVIRONMENT BROWSER=chrome wdio run wdio.conf.js --grep='Browser'",
        "test:browser:firefox": "cross-env PLATFORM=browser ENVIRONMENT=$ENVIRONMENT BROWSER=firefox wdio run wdio.conf.js --grep='Browser'",
        "test:debug": "cross-env ENVIRONMENT=$ENVIRONMENT wdio run wdio.conf.js --logLevel=debug",
        "test:headed": "cross-env ENVIRONMENT=$ENVIRONMENT wdio run wdio.conf.js --headed",
        "report:allure": "allure generate allure-results --clean && allure open",
        "report:junit": "npx junit-viewer --results=test-results/junit --port=3001",
        "lint": "eslint test/ --ext .js,.ts",
        "lint:fix": "eslint test/ --ext .js,.ts --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "validate": "npm run lint && npm run format:check",
        "typecheck": "tsc --noEmit",
        "clean": "rimraf allure-results test-results logs screenshots",
        "clean:all": "rimraf node_modules package-lock.json",
        "setup": "npm run setup:appium",
        "setup:appium": "echo \"Please install appium locally via devDependencies (npm i -D appium) or run: npm exec -c 'appium --version'\"",
        "docker:build": "docker build -t mobile-automation .",
        "docker:test": "docker run --privileged -e ENVIRONMENT=$ENVIRONMENT mobile-automation",
        "docker:compose:up": "docker-compose up -d",
        "docker:compose:down": "docker-compose down",
        "docker:compose:test": "docker-compose run --rm mobile-tests",
        "precommit": "npm run lint",
        "prepare": "husky"
    },
    "author": "Dewanshu",
    "license": "ISC",
    "keywords": [
        "webdriverio",
        "mobile",
        "automation",
        "testing",
        "appium",
        "android",
        "ios",
        "ci-cd",
        "page-object-model"
    ],
    "devDependencies": {
        "@babel/cli": "^7.23.0",
        "@babel/core": "^7.23.0",
        "@babel/preset-env": "^7.22.20",
        "@babel/register": "^7.22.15",
        "@types/node": "^20.10.0",
        "@wdio/allure-reporter": "^8.16.17",
        "@wdio/appium-service": "^8.16.17",
        "@wdio/cli": "^8.24.6",
        "@wdio/globals": "^8.16.17",
        "@wdio/junit-reporter": "^9.20.0",
        "@wdio/local-runner": "^8.16.17",
        "@wdio/mocha-framework": "^8.16.17",
        "@wdio/selenium-standalone-service": "^8.14.0",
        "@wdio/spec-reporter": "^8.16.17",
        "appium": "^3.1.0",
        "appium-chromium-driver": "^2.0.2",
        "appium-uiautomator2-driver": "^6.0.2",
        "appium-xcuitest-driver": "^10.8.1",
        "chromedriver": "^142.0.1",
        "cross-env": "^10.1.0",
        "eslint": "^8.50.0",
        "eslint-plugin-wdio": "^8.8.7",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "prettier": "^3.1.0",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.0",
        "wdio-chromedriver-service": "^8.1.1",
        "wdio-geckodriver-service": "^5.0.2"
    },
    "dependencies": {
        "allure-commandline": "^2.24.0",
        "chalk": "^5.6.2",
        "dotenv": "^17.2.3"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/your-org/mobile-automation-framework.git"
    },
    "bugs": {
        "url": "https://github.com/your-org/mobile-automation-framework/issues"
    },
    "homepage": "https://github.com/your-org/mobile-automation-framework#readme"
}
